<!DOCTYPE html>
<html>
  <head>
    <title>Bunsenbako</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <body>
    <% if notice %>
      <p><%= notice %></p>
    <% end %>
    <% if alert %>
      <p><%= alert %></p>
    <% end %>

    <header class="site-header">
  <p><%= link_to "TOP画面", root_path %></p>
  <% if user_signed_in? %>
    <h2> 現在 <%= current_user.name %> さんがログインしています </h2>
    <h4> メールアドレス： <%= current_user.email %> </h4>
    <p><%= link_to "マイページ", users_show_path(current_user.id) %></p>
    <p><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></p>

  <% else %>
    <h2> 現在ログインしていません </h2>
      <%= link_to "ログイン", new_user_session_path, class: 'post' %>
      <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
  <% end %>
  </header>


    <%= yield %>
  </body>
</html>
